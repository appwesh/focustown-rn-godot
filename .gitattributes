# Normalize EOL for all files that Git considers text files.
* text=auto eol=lf
# Git LFS for large binary assets
*.fbx filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.glb filter=lfs diff=lfs merge=lfs -text
*.gltf filter=lfs diff=lfs merge=lfs -text
# Exclude landing page images from LFS (needed for Vercel)
apps/landing/public/*.png -filter -diff -merge text=auto
apps/landing/public/*.jpg -filter -diff -merge text=auto
*.tres filter=lfs diff=lfs merge=lfs -text
